{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hyprhai",
  "version": "0.1.0",
  "identifier": "com.varun.hyprhai",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "hyprhai",
        "width": 950,
        "height": 300,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/**"]
      }
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
